{
  "name": "node-ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/bin/server.ts",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts}' --quiet --fix",
    "lint:ts": "eslint --ext=jsx,ts src",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "start": "npm run build && node build/src/bin/server.js",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run dev\"",
    "debug": "export DEBUG=* && npm run watch",
    "copy-static-assets": "ts-node copyStaticAssets.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/concurrently": "^6.2.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/mongoose": "^5.7.31",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.23",
    "@types/nodemailer": "^6.4.2",
    "@types/nunjucks": "^3.1.4",
    "@types/shelljs": "^0.8.8",
    "@types/superagent": "^4.1.11",
    "bcrypt": "^5.0.1",
    "concurrently": "^6.2.0",
    "dotenv": "^8.2.0",
    "eslint-plugin-mocha": "^8.0.0",
    "express": "^4.17.1",
    "express-winston": "^4.1.0",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.25",
    "morgan": "^1.10.0",
    "nodemailer": "^6.6.1",
    "nodemon": "^2.0.7",
    "nunjucks": "^3.2.3",
    "shelljs": "^0.8.4",
    "superagent": "^3.8.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.5.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:write && lint-staged"
    }
  },
  "precommit": "NODE_ENV=production lint-staged",
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
